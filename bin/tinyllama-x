#!/usr/bin/env bash
set -euo pipefail

# tinyllama-x CLI launcher
# Tries system install dir first, then user dir. Allow override via TINYLLAMA_X_DIR.
APP_DIR="${TINYLLAMA_X_DIR:-/opt/tinyllama-x}"
if [[ ! -d "$APP_DIR" ]]; then
  APP_DIR="$HOME/.local/share/tinyllama-x"
fi

if [[ ! -d "$APP_DIR" ]]; then
  echo "Error: TinyLlama-X is not installed. Run: ./scripts/install_ubuntu.sh --user" >&2
  exit 1
fi

exec "$APP_DIR/ai_terminal_llama_simple.sh" "$@"
